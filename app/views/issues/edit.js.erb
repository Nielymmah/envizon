$(".editor-container").html("<%= j render(partial: 'issues/edit') %>");
$(".editor").each(function(index, value) {
    ClassicEditor
    .create( value, {
        toolbar: {
            items: [
                'bold',
                'italic',
                'fontColor',
                'fontBackgroundColor',
                'codeBlock',
                'highlight',
                'fontFamily',
                'horizontalLine',
                'specialCharacters',
                'link',
                'undo',
                'redo'
            ]
        },
        language: 'de'
    });
});
$(".list-group-item-action-active").removeClass("list-group-item-action-active");
$(".issue-<%= @issue.id %>").addClass("list-group-item-action-active");

$(".editor-container").html("<%= j render(partial: 'issues/edit') %>");
$(".editor").each(function(index, value) {
    ClassicEditor
    .create( value, {
        toolbar: {
            items: [
                'bold',
                'italic',
                'fontColor',
                'fontBackgroundColor',
                'codeBlock',
                'highlight',
                'fontFamily',
                'horizontalLine',
                'specialCharacters',
                'link',
                'undo',
                'redo'
            ]
        },
        language: 'de'
    });
});

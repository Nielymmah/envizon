<% if @issue.present? && Issue.exists?(@issue.id) %>
    $(".editor-container").html("<%= j render(partial: 'issues/edit') %>");
<% else %>
    $(".editor-container").html("")
<% end %>

$("#report_tree").html("<%= j render(partial: 'report_parts/report_tree') %>");
$(".editor").each(function(index, value) {
    ClassicEditor
    .create( value, {
        toolbar: {
            items: [
                'bold',
                'italic',
                'fontColor',
                'fontBackgroundColor',
                'codeBlock',
                'highlight',
                'fontFamily',
                'horizontalLine',
                'specialCharacters',
                'link',
                'undo',
                'redo'
            ]
        },
        language: 'de'
    });
});
$("#notification_container").html("<%= j render(partial: 'layouts/notification') %>");
$('div.toast').toast('show');
$(".modal").modal("hide");

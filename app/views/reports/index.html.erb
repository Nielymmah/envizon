<div class="row mt-4">
  <div class="col-3">
    <div id="report_tree">
      <%= render partial: "report_parts/report_tree" %>
    </div>
  </div>
  <div class="col-9 editor-container"><!-- scrollbar -->
    <!-- partial render issue (selected) siehe -> issue template -->
    <!-- partial render report edit -->
  </div>
</div>




<div class="reports-page">
  <% if @report_parts.empty? %>
    <div class="row">
      <div class="col s12">
        <%= link_to new_issue_group_path, remote: true do %>
          <div class="placeholder tooltipped modal-trigger center-align" data-position="top" data-tooltip="Add new issue group">
              <i class="material-icons blue-text text-lighten-4">add</i>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div>

<!-- Modal (medium) -->
<div id="medium-modal" class="modal modal-fixed-footer">
  <div id="medium-modal-content">
  </div>
</div>

<div class="site-action">
  <div class="btn-group dropup">
    <button type="button" class="btn btn-primary dropdown-toggle border border-white" data-toggle="dropdown" aria-expanded="false">
      <i class="fas fa-terminal mr-2"></i>Site actions
    </button>
    <ul class="dropdown-menu dropdown-menu-right">
      <% case current_user.settings.where(name: 'report_mode').first_or_create.value %>
      <% when "presentation" %>
        <li>
          <%= simple_form_for :settings, url: update_settings_path do |f| %>
            <input type="hidden" value="edit" name="report_mode"/>
            <a href="#" onclick='$(this).parent().submit();' class="dropdown-item"><i class="fab fa-chromecast mr-2"></i>Disable presentation mode</a>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to new_issue_path, remote: true, class: "dropdown-item" do %>
            <i class="fas fa-plus mr-2"></i>Add new issue
          <% end %>
        </li>
        <li>
          <%= link_to export_odt_path(@current_report), class: "dropdown-item" do %>
            <i class="fas fa-file-word mr-2"></i>Export current report as docx
          <% end %>
        </li>
        <li>
          <%= link_to export_xlsx_path(@current_report), class: "dropdown-item" do %>
            <i class="fas fa-file-excel mr-2"></i>Export current report as xlsx
          <% end %>
        </li>
        <li>
          <%= link_to new_issue_group_path, remote: true, class: "dropdown-item" do %>
            <i class="fas fa-folder-plus mr-2"></i>Add new issue group
          <% end %>
        </li>
        <li>
          <%= link_to edit_report_path(@current_report), remote: true, class: "dropdown-item" do %>
            <i class="fas fa-edit mr-2"></i>Edit current report
          <% end %>
        </li>
        <li>
          <%= simple_form_for :settings, url: update_settings_path do |f| %>
            <input type="hidden" value="presentation" name="report_mode"/>
            <a href="#" onclick='$(this).parent().submit();' class="dropdown-item"><i class="fab fa-chromecast mr-2"></i>Enable presentation mode</a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<script>
  var pasteTarget = document.getElementsByTagName("body");
  pasteTarget[0].addEventListener("paste", uploadClipboardData);
  function uploadClipboardData(e){
      for (var i = 0 ; i < e.clipboardData.items.length ; i++) {
          var item = e.clipboardData.items[i];
          if (item.type.indexOf("image") != -1) {
              var fileInput = document.getElementById("issue_screenshot_image");
              fileInput.files = e.clipboardData.files;
              $("#issue_screenshot_image_path").val("Image from clipboard ...");
          };
      };
  };
  $(document).ready(function(){
    $('.tap-target').tapTarget('open');
  });
  $(window).bind('keydown', function(event) {
    if (event.ctrlKey || event.metaKey) {
      switch (String.fromCharCode(event.which).toLowerCase()) {
      case 's':
          event.preventDefault();
          $(".btn-save").trigger("click");
          break;
      }
    }
  });
</script>

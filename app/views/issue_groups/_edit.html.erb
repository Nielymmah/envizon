<%= simple_form_for @issue_group, html: { class: 'row' } do |f| %>
  <%= f.input :title, wrapper_html: { class: 'col-8' } %>
  <%= f.input :index, wrapper_html: { class: 'col-2' } %>
  <div class="col-2 form-group d-flex align-items-end">
    <button type="submit" class="btn btn-primary btn-save"><i class="fas fa-save"></i></button>
  </div>
<% end %>

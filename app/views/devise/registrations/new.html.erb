<div class="d-flex vh-center-wrapper">
  <div class="vh-center">
    <%= image_tag("logo/envizon-wide-export-blue.svg", width:"100%", class: "pb-3") %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name )) do |f| %>
      <input type="hidden" name="user[username]" value="root">
      <%= f.input :password, required: true, wrapper_html: { class: "mb-3" }, input_html: { autofocus: true }, placeholder: "Define your application password", label: false %>
      <%= f.input :password_confirmation, required: true, placeholder: "Confirm your application password", label: false %>
      <%= f.button :submit, "Log in", class: "hidden"%>
    <% end %>
  </div>
</div>

<% if @archived %>
    $(".selected-group").html("<%= j(render('groups/group_archived')) %>");
    $(".selected-group").attr('gid', 'archived');
<% else %>
    $(".selected-group").html("<%= j(render('groups/group')) %>");
    $(".selected-group").attr('gid', '<%= @group.id %>');
<% end %>
$(document).ready(function() {
  $('.dt-init').each(function() {
    $( this ).DataTable({
      columnDefs: [
        { type: 'ip-address', targets: 0 }
      ],
      lengthMenu: [ [10, 50, 100, -1], [10, 50, 100, "All"] ]
    });
    $( this ).children("tbody").selectable({
      filter: 'tr',
      cancel: 'a'
    });
  });
});
